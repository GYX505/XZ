<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".one.FoneFragment">
    <RelativeLayout
        android:layout_height="200dp"
        android:layout_width="match_parent">
        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <EditText
                android:id="@+id/gyx_serch"
                android:layout_height="40dp"
                android:layout_width="380dp"
                android:background="@drawable/edit_text"
                android:textSize="18sp"
                android:hint=" Donâ€˜t touch me!"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>
            <ImageButton
                android:id="@+id/gyx_imgserch"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="355dp"
                android:src="@drawable/gyx_serch"/>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/gyx_banner1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/gyx_banner1"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/gyx_banner2"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/gyx_banner2"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/gyx_banner3"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/gyx_banner3"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>