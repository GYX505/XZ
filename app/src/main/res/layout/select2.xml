<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"/>
    <TextView
        android:id="@+id/txt_tip1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="      你是？"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_man"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/btn_mw" />
    <Button
        android:id="@+id/btn_woman"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="253dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/btn_mw"/>
    <ImageView
        android:id="@+id/img_man"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/man"/>
    <ImageView
        android:id="@+id/img_woman"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="271dp"
        android:layout_marginTop="133dp"
        android:background="@drawable/woman"/>

    <Button
        android:id="@+id/btn_10"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/btn_age"
        android:text="10后" />
    <Button
        android:id="@+id/btn_00"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="135dp"
        android:text="00后"
        android:background="@drawable/btn_age"/>
    <Button
        android:id="@+id/btn_90"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="135dp"
        android:text="10后"
        android:background="@drawable/btn_age"/>

    <Button
        android:id="@+id/btn_80"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="495dp"
        android:background="@drawable/btn_age"
        android:text="10后" />
    <Button
        android:id="@+id/btn_70"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="135dp"
        android:text="其他年龄层"
        android:background="@drawable/btn_age"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/btn_next"
        android:text="下一步"
        android:textSize="18sp"
        android:textColor="@color/white"/>
</RelativeLayout>