<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cblue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cblue"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="性知识大作战"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"></TextView>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:background="@color/cblue"
            android:src="@drawable/c_back1"></ImageButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp">

            <ImageButton
                android:id="@+id/btn_pai"
                android:layout_width="330dp"
                android:layout_height="130dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="58dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/competiton_btn1" />
            <ImageButton
                android:id="@+id/btn_lian"
                android:layout_width="328dp"
                android:layout_height="130dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="58dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/competition_btn2" />
            <ImageButton
                android:id="@+id/btn_cuo"
                android:layout_width="328dp"
                android:layout_height="95dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="58dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/c_btn3" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>