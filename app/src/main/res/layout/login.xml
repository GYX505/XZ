<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toly="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/login">

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/logo"
        android:alpha="0.8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="340dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:hint="请输入姓名:"
            android:layout_marginLeft="10dp"
            android:textColorHint="@android:color/transparent"
            android:textSize="16sp"
            android:alpha="0.75"
            android:background="@drawable/edit_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="405dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="请输入电话号码:"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColorHint="@android:color/transparent"
            android:alpha="0.75"
            android:background="@drawable/edit_text"/>
        <Button
            android:id="@+id/btn_send"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="发送"
            android:textSize="18sp"
            android:background="@drawable/btn_login"
            android:alpha="0.75"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:background="@drawable/btn_login"
        android:text="一键登录/注册"
        android:textSize="18sp"
        android:alpha="0.75" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="550dp">
        <ImageButton
            android:id="@+id/ibtn_wx"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/wx"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"/>
        <ImageButton
            android:id="@+id/ibtn_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/qq"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"/>
        <ImageButton
            android:id="@+id/ibtn_wb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/wb"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <RadioButton
        android:id="@+id/rbtn_accredit"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_marginTop="668dp"
        android:textSize="14sp"
        android:background="@drawable/radio_btn"

        android:text="同意《用户协议》、《隐私政策》、《青少年文明公约》帮助您了解我们、使用和存储情况以及您享有的权利。"/>
</RelativeLayout>