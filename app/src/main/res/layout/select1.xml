<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="25dp"
        android:text="您选择幸知是为了:"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_tip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="25dp"
        android:text="我们将为你推荐合适的内容"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_self"
        android:layout_width="352dp"
        android:layout_height="135dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:alpha="0.45"
        android:background="@drawable/btn_self"/>
    <Button
        android:id="@+id/btn_child"
        android:layout_width="352dp"
        android:layout_height="135dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/btn_child"
        android:alpha="0.45"/>
    <ImageView
        android:id="@+id/img_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/self" />
    <ImageView
        android:id="@+id/img_child"
        android:layout_width="420dp"
        android:layout_height="180dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/child"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自己学"
        android:textSize="18sp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="给孩子学"
        android:textSize="18sp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="60dp"/>

</RelativeLayout>