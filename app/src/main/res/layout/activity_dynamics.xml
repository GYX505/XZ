<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".one.DynamicsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/no_sex"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg_select"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg_select"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg_select"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/magnifier"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/m1"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:src="@drawable/modular1" />

            <ImageView
                android:id="@+id/m2"
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_toRightOf="@id/m1"
                android:src="@drawable/modular2" />
            <ImageView
                android:id="@+id/m3"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_below="@id/m1"
                android:src="@drawable/modular3" />

            <ImageView
                android:id="@+id/m4"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_toRightOf="@id/m3"
                android:layout_below="@id/m2"
                android:src="@drawable/modular4" />
            <ImageView
                android:id="@+id/m5"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_below="@id/m3"
                android:src="@drawable/modular5" />
            <ImageView
                android:id="@+id/m6"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_toRightOf="@id/m5"
                android:layout_below="@id/m3"
                android:src="@drawable/modular2" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>